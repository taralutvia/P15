#include <iostream>
#include <string.h>

using namespace std;

struct MOTOR{
    string merk;
    int tahun;
    string nopolisi;
    string warna;
};
MOTOR yamaha;

void setmotor(){
    cout<<"Merk      : ";
    cin>>yamaha.merk;
    cout<<"Tahun     : ";
    cin>>yamaha.tahun;
    cout<<"No Polisi : ";
    cin>>yamaha.nopolisi;
    cout<<"Warna     : ";
    cin>>yamaha.warna;

    }
void showinfomotor(){
        cout<<"------------------------"<<endl;
        cout<<"Merk      : "<<yamaha.merk<<endl;
        cout<<"Tahun     : "<<yamaha.tahun<<endl;
        cout<<"No polisi : "<<yamaha.nopolisi<<endl;
        cout<<"Warna     : "<<yamaha.warna<<endl;
    }

int main()
{

    setmotor();
    showinfomotor();

    return 0;
}
